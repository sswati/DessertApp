<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title-Ever So Sweet Desserts</title>

    <link href="https://fonts.googleapis.com/css?family=Playfair+Display:400,700i,900i" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Cherry+Swash|Oleo+Script+Swash+Caps|Special+Elite" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Courgette" rel="stylesheet">

    <link href="@Url.Content("~/Content/Images.css")" rel="stylesheet" type="text/css" />



    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
   
    <div class="container body-content">
        @RenderBody()
        <hr />

        <br />
        <footer style="float:right">
            <p>
            <br />
            &copy; @DateTime.Now.Year -Ever So Sweet Desserts</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
